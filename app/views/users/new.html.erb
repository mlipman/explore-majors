<% @user.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>  

<h1>New User</h1>
<%= form_for @user, :url => {:action=>:create} do |f| %>
	<table>
		<tr><td>Name: </td><td><%= f.text_field(:name) %><br /></td></tr>
		<tr><td>login: </td><td><%= f.text_field(:login) %><br /></td></tr>
		<tr><td>password: </td><td><%= f.password_field(:password) %><br /></td></tr>
		<tr><td>password confirmation: </td><td><%= f.password_field(:password_confirmation) %><br /></td></tr>
	</table>
	<%= submit_tag "Submit" %><br />
<% end %>